extends layout

block content
  .wrapper#wrapper
    .outer#first.active
      .inner
        .square 1

    .outer#second
      .inner
        .square 1
        .square 2

    .outer#third
      .inner
        .square 1
        .square 2
        .square 3
        .square 4

    .outer#fourth
      .inner
        .square 1
        .square 2
        .square 3
        .square 4
        .square 5
        .square 6
        .square 7
        .square 8


  #controls
    button#next Next
    button#previous Previous
    select#transition-type
      option(value="scale") Scale
      option(value="slide") Slide

block scripts
  script(src="/javascripts/index.js")
