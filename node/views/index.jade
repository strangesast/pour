extends layout

block content
  .wrapper.loading#wrapper
    .outer#index(hash-url="index", static=true)
      .inner
        a(href="/#/option").main.btn.btn-default POUR

    .outer#option(hash-url="option", static=true)
      .inner
        #option
          a(href="/#/pour")#count.btn.btn-default COUNT
          a(href="/#/pour?anonymous=True")#pass.btn.btn-default PASS

    .outer#loading
      .inner
        div
          +loading_beer

    .outer#pouring(hash-url="pouring", static=true)
      .inner
        div#pour-loading
          .percentage#pour-percentage(value="0")
            .bar


  #keg-status
    span#kegerator-status-indicator.glyphicon.glyphicon-refresh
    if kegerators.length > 0
      select#default-kegerator.form-control
        for kegerator in kegerators
          option(value=kegerator._id)=kegerator.name
    else
      select.form-control(disabled=true)
        option No kegerators

  #controls
    select#transition-type
      option(value="scale") Scale
      option(value="slide") Slide

block scripts
  script(src="/javascripts/index.js")
